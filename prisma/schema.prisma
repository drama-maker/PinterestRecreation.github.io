datasource db {
  provider = "postgresql"
  url      = "postgresql://username:password@localhost:5433/postgres?schema=public"
}

generator db {
  provider  = "prisma-client-py"
  interface = "sync"
}

model User {
    id  Int @id @default(autoincrement())
    username String
    password String
    email String
    registrationDate DateTime
    profilePic String?
    firstName String
    lastName String?
    birthdate DateTime
    gender String?
    pronouns String
    country String
    language String
    about String?
    websiteURL String?
    isDeactivated Boolean
    isDeleted Boolean
}